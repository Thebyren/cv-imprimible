---
const { title } = Astro.props
---

<section>
  {title && <h2>{title}</h2>}
  <slot/>
</section>

<style>
  h2{
    font-size:1.8rem;
    margin-left:5px;
  }
  section{
    border:#bbb solid 2px;
    max-width: 700px;
    margin:0 auto 48px;
    line-height:1.5;
    font-size: 1.5rem;
    background-color:#eee;
    padding:0.4rem;
    border-radius:20px;
    position:relative;
  }
  section::before{
    border:#ccc solid 2px;
    content: "";
    height: 100%;
    width: 100%;
    position: absolute;
    z-index:-1;
    border-radius:22px;
    padding:0.4rem;
    max-width: 700px;
    background:#cbf;
  }
  @media print{
    section{
      border:none;
      margin:0 auto 32px;
      line-height: 1.3;
      font-size:1.4rem;
    }
    section::before{
      border:none;
    }
  }
  
</style>