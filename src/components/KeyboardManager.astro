};
  const profilesInfo = profiles.map(({network, url})=>{
    const icon = SOCIAL_ICONS[network]
    const firsLetter = network[0].toUpperCase()

    return {
      id:network,
      section:"Social",
      title:` Visitar ${network}`,
      url,
      icon,
      hotkey:`ctrl+${firsLetter}`
    }
  })
---

<button type="button" class="print-button">imprimir</button>
<footer>
  Pulsa <kbd>Ctrl</kbd> + <kbd>K</kbd> para abrir la paleta de comandos
</footer>
<ninja-keys
placeholder="Buscar atajos de teclado"
hideBreadcrumbs=true
data-info={JSON.stringify(profilesInfo)}
/>
<script>
  const buttons = document.querySelectorAll('button.print-button')

  buttons.forEach((buttons)=>{
    buttons.addEventListener('click',()=>{
      window.print()
    })
  })
  import "ninja-keys";
  const ninja = document.querySelector("ninja-keys");
  if (ninja != null) {
    const info = ninja?.getAttribute('data-info') ?? '[]'
    const parsedInfo = JSON.parse(info)
    const data = parsedInfo.map((item: any)=>{
      return{
        ... item,
        handler:()=>{
          window.open(item.url, "_blank")
        }
      }
    })
    ninja.data = [
      {
        id: "imprimir",
        title: "imprimir cv en pdf",
        hotkey: "ctrl+P",
        section:"Acciones",
        icon: `<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-printer" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M17 17h2a2 2 0 0 0 2 -2v-4a2 2 0 0 0 -2 -2h-14a2 2 0 0 0 -2 2v4a2 2 0 0 0 2 2h2" /><path d="M17 9v-4a2 2 0 0 0 -2 -2h-6a2 2 0 0 0 -2 2v4" /><path d="M7 13m0 2a2 2 0 0 1 2 -2h6a2 2 0 0 1 2 2v4a2 2 0 0 1 -2 2h-6a2 2 0 0 1 -2 -2z" /></svg>`,
        handler: ()=>{
          window.print()
        }
      },
      {
        id: "llamar",
        title: "llamar por telefono",
        hotkey: "ctrl+T",
        section:"Acciones",
        icon: `<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-phone" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M5 4h4l2 5l-2.5 1.5a11 11 0 0 0 5 5l1.5 -2.5l5 2v4a2 2 0 0 1 -2 2a16 16 0 0 1 -15 -15a2 2 0 0 1 2 -2" /></svg>`,
        handler: ()=>{
          window.print()
        }
      },
      ... data,
    ];
  }
</script>

<style>
  @keyframes fadeIn {
    from {
      opacity:0;
    }
    to{
      opacity:1;
    }
  }
  footer{
    position:fixed; 
    bottom:0;
    left:0;
    text-align:center;
    width:100%;
    background:#fdfdfd;
    padding-block: 8px;
    border-top: 2px solid #bbb;
    
    view-timeline-name: --revealing;
    view-timeline-axis: block;
    animation:ease-in-out 0.7s fadeIn;
    animation-timeline: --revealing;
    animation-range: entry 100% cover 10%;
  }
  kbd{
    background: #aac;
    padding-inline:4px;
    border-radius: 5px;
    font-size: 0.85rem;
  }
  button{
    display:none;
    background:#fdfdfd;
    border:2px solid #bbb; 
    width:100%;
    font-size:1.3rem;
  }
  button:hover{
    background: #aac;
  }
  @media print{
    ninja-keys{
      display: none;
    }
    footer{
      display:none;
    }
  }
  @media only screen and (max-width:600px){
    footer{
      display:none;
    }
    button{
      display:block;
    }
  }
</style>